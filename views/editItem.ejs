<% include templates/header.ejs %>
 <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
        <div class="container">
                <div class="row">
                <div class="col-sm-8">
                    <% if(message!=''){%>
                        <div id="success-alert" class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                        <h4><i class="icon fa fa-check"></i> Success!</h4>
                        Successfully Updated Item.
                        </div>
                        <script>
                            $("#success-alert").fadeTo(2000,500).slideUp(500,function(){
                                $("#success-alert").slideUp(500);
                            });
                        </script>
                    <%} %>
                    <form class="form-horizontal" method="POST" action="/editItemAction">
                        <input type="hidden" name="id" value="<%=item.id%>" />
                        <div class="form-group">
                            <label for="itemName" class="col-sm-2 control-label">Item Name</label>
                            <div class="col-sm-10">
                            <input value="<%=item.name%>" type="text" class="form-control" id="itemName" name="name" placeholder="Item Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="quantity" class="col-sm-2 control-label">Item Quantity</label>
                            <div class="col-sm-10">
                            <input value="<%=item.quantity %>" type="text" class="form-control" id="quantity" name="quantity" placeholder="Item Quantity">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="price" class="col-sm-2 control-label">Price</label>
                            <div class="col-sm-10">
                            <input value="<%=item.price %>" type="text" class="form-control" id="price" name="price" placeholder="Price">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="code" class="col-sm-2 control-label">Code</label>
                            <div class="col-sm-10">
                            <input value="<%=item.code%>" type="text" class="form-control" id="code" name="code" placeholder="Code">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description" class="col-sm-2 control-label">Description</label>
                            <div class="col-sm-10">
                            <textarea class="form-control" rows=5 id="description" name="description"><%=item.description%></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">Update Item</button>
                            </div>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
</div>
  <!-- /.content-wrapper -->

<% include templates/footer.ejs %>