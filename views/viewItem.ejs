<% include templates/header.ejs %>
 <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
<% if(message!=''){%>
    <div id="danger-alert" class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <h4><i class="icon fa fa-check"></i> Success!</h4>
    Successfully Removed Item.
    </div>
    <script>
        $("#danger-alert").fadeTo(2000,500).slideUp(500,function(){
            $("#danger-alert").slideUp(500);
        });
    </script>
<%} %>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <table id="itemsTable" class="table table-bordered table-striped dataTable" role="grid" style="border: 1px solid #ccc!important;">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Item Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Code</th>
                        <th>Description</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(i=0;i<items.length;i++){%>
                        <tr>
                            <td><%=items[i].id %></td>
                            <td><%=items[i].name %></td>
                            <td><%=items[i].quantity %></td>
                            <td><%=items[i].price %></td>
                            <td><%=items[i].code %></td>
                            <td><%=items[i].description %></td>
                            <td><a href="/editItem?id=<%=items[i].id %>"><i class="fa fa-edit">|</i></a> <a href="/deleteItem?id=<%=items[i].id %>"><i class="fa fa-trash text-danger"></i></a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    </div>

<script>
    $(function() {
        $('#itemsTable').DataTable({
            "paging" : true,
            "lengthChange" : false,
            "searching" : true,
            "ordering" : true,
            "info" : true,
            "autoWidth" : false
        });
    });
</script>
</div>
  <!-- /.content-wrapper -->

